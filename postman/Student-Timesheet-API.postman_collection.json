							"  }\r",
							"\r",
							"  const timestamp  = Date.now();\r",
							"  const plain      = `${timestamp}-${studentId}`;\r",
							"\r",
							"  const sessionId  = btoa(plain);\r",
							"\r",
							"  pm.variables.set('sessionId', sessionId);\r",
							"})();\r",
							""
						],
